{
    "version": "2.0",
    "contexts": [{
            "id": "content-ops",
            "name": "Content Operations",
            "description": "Context for content management and operations in Next.js applications",
            "settings": {
                "model": "gpt-4",
                "temperature": 0.5,
                "max_tokens": 4000
            },
            "rules": {
                "tone": "professional",
                "style": "detailed",
                "formatting": "markdown",
                "boundaries": "Focus on content operations, Next.js, and component frameworks",
                "fallback": "Suggest relevant documentation or tools"
            },
            "privacy": {
                "data_retention": "session",
                "logging": "minimal"
            },
            "tools": [
                "component-creator",
                "mcp-validator",
                "html-tsx-pairing"
            ],
            "protocolFiles": [
                "tools/mcp/protocols/Model Context Protocol (MCP) for content-ops-starter.md"
            ]
        },
        {
            "id": "integration",
            "name": "Third-party Integration",
            "description": "Context for integrating external applications into Next.js",
            "settings": {
                "model": "gpt-4",
                "temperature": 0.5,
                "max_tokens": 4000
            },
            "rules": {
                "tone": "analytical",
                "style": "detailed",
                "formatting": "markdown",
                "boundaries": "Focus on API integration, third-party services, and conversion workflows",
                "fallback": "Suggest integration patterns or documentation"
            },
            "privacy": {
                "data_retention": "session",
                "logging": "minimal"
            },
            "tools": [
                "mcp-validator",
                "compatibility-checker"
            ],
            "protocolFiles": [
                "tools/mcp/protocols/Model Context Protocol (MCP) for Replit Integration.md"
            ]
        }
    ],
    "toolPaths": {
        "base": "tools",
        "userTools": "tools/commands"
    },
    "features": {
        "autoContext": true,
        "mcpValidation": {
            "enabled": true,
            "onSave": true,
            "onCommit": true
        },
        "componentGeneration": {
            "defaultType": "page",
            "useTypescript": true,
            "cssModules": true
        }
    }
}